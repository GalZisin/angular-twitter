{
  "compileOnSave": false,
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "esModuleInterop": true,
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        // "src/types/*"
      ]
    },
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true
  }
}
