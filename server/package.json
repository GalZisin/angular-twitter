{
    "name": "09-ts-eslint",
    "version": "1.0.0",
    "description": "",
    "main": "server.js",
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "build:run": "tsc",
        "build:clean": "rimraf dist",
        "build": "npm run build:clean && npm run build:run",
        "dev": "SET NODE_ENV=DEVELOPMENT && ts-node src/server.ts",
        "prod": "SET NODE_ENV=PRODUCTION && ts-node src/server.ts",
        "start": "nodemon",
        "lint": "eslint src/**/*.ts",
        "lint:fix": "npm run lint -- --fix",
        "format": "prettier --write \"src/**/*.ts\"",
        "format:check": "prettier --check \"src/**/*.ts\"",
        "client": "npm start --prefix client",
        "dev-concurrently": "concurrently -n 'server,client' -c 'red,green' \"npm run watch:start\" \"npm run client\""
    },
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@types/bcryptjs": "^2.4.2",
        "@types/cookie-parser": "^1.4.2",
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.13",
        "@types/jsonwebtoken": "^8.5.4",
        "@types/mongoose": "^5.11.97",
        "@types/node": "^14.11.8",
        "@types/validator": "^13.6.3",
        "@typescript-eslint/eslint-plugin": "^4.4.0",
        "@typescript-eslint/parser": "^4.4.0",
        "eslint": "^7.11.0",
        "eslint-config-prettier": "^6.12.0",
        "eslint-plugin-prettier": "^3.1.4",
        "nodemon": "^2.0.4",
        "prettier": "^2.1.2",
        "rimraf": "^3.0.2",
        "ts-node": "^9.0.0",
        "typescript": "^4.0.3"
    },
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "concurrently": "^6.2.0",
        "cookie-parser": "^1.4.5",
        "cors": "^2.8.5",
        "dotenv": "^10.0.0",
        "express": "^4.17.1",
        "jsonwebtoken": "^8.5.1",
        "moment": "^2.29.1",
        "mongoose": "^5.13.5",
        "multer": "^1.4.3",
        "npm-run-all": "^4.1.5",
        "validator": "^13.6.0"
    },
    "engines": {
        "node": "14.17.3"
    }
}
